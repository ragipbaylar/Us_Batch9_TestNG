<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test name="Test Methods Include">
        <classes>
            <class name="Day04._03_Groups">
                <methods>
                    <include name="test4"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Test Methods Exclude">
        <classes>
            <class name="Day04._03_Groups">
                <methods>
                    <exclude name="test4"></exclude> <!--Runs all the tests from but test4-->
                </methods>
            </class>
        </classes>
    </test>
</suite>